<% @page_heading = _('New article') %>

<%= render "admin/shared/edit", {:form_type => "article", :form_action => {:action => "new", :id => @article.id, :class => ('autosave')}} %>

<% if current_user.admin? %>
    <%= form_tag(:merge, method: :put) do %>
        <div class="merge-area">
          <h4>Merge Articles</h4>
          <%= label_tag :merge_with, "Article ID", style: "width:70px;text-align:left;" %><%= text_field_tag :merge_with, "", {:autocomplete => 'off', :style => 'width: 250px'} %>
          <br>
          <%= submit_tag "Merge" %>
        </div>
    <% end %>
<% end %>
